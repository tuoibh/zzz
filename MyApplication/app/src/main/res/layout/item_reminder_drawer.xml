<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#F6F6F6"
    android:padding="10dp">

    <TextView
        android:id="@+id/txt_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="movie_title"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xx/10"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_movie_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_movie_title" />

    <TextView
        android:id="@+id/txt_date_time_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date_time"
        android:textSize="10sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/txt_movie_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_point" />

</androidx.constraintlayout.widget.ConstraintLayout>